
#!/bin/bash
red='\033[1;31m'
grn='\033[1;32m'
yel='\033[1;33m'
blu='\033[1;36m'
clr='\033[0m'

if [ -z $1 ]; then
  echo
  echo "${yel}seek utility version 1.0 by Chris, 2019"
  echo "${grn}usage: ${blu}seek ${clr}term ${blu}[from_what_directory]"
  echo "${grn}ex   : ${blu}seek ${clr}foo ${blu}~/bar"
  echo "${grn}ex2  : ${blu}seek ${clr}foo"
  echo
  exit 1
fi


if [ -z $2 ]; then
  searchfrom=$2
else
  searchfrom=$PWD
fi

grep -rn --color=always $searchfrom $1
